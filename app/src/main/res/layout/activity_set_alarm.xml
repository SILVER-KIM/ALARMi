<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetAlarmActivity"
    android:background="#A7BBE0">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="380dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@mipmap/round">

    <TimePicker
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:theme="@style/AppTheme.Picker"
        android:timePickerMode="spinner" />

        <TextView
            android:id="@+id/timeText"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textColor="#000"
            android:layout_marginLeft="15dp"
            android:textSize="15dp"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>

        <ImageView
            android:id="@+id/mole"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:src="@mipmap/mole"/>

        <ImageView
            android:id="@+id/bubble"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:src="@mipmap/bubble"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/bubble_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="뚝딱뚝딱:)"
            android:textSize="10dp"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="110dp"
            android:visibility="invisible"/>

    <RelativeLayout
        android:id="@+id/r2"
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/r1"
        android:layout_marginTop="10dp"
        android:background="@mipmap/round">

        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="요일"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"/>

        <ToggleButton
            android:id="@+id/sun"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/ripple_background"
            android:layout_below="@id/t1"
            android:layout_marginTop="8dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textOff="일"
            android:textOn="일"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            android:textSize="12dp"
            android:stateListAnimator="@null"/>

        <ToggleButton
            android:id="@+id/mon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/ripple_background"
            android:layout_below="@id/t1"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="2dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textOff="월"
            android:textOn="월"
            android:layout_toRightOf="@id/sun"
            android:textColor="#000"
            android:textSize="12dp"
            android:stateListAnimator="@null"/>

        <ToggleButton
            android:id="@+id/tue"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/ripple_background"
            android:layout_below="@id/t1"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="2dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textOff="화"
            android:textOn="화"
            android:layout_toRightOf="@id/mon"
            android:textColor="#000"
            android:textSize="12dp"
            android:stateListAnimator="@null"/>

        <ToggleButton
            android:id="@+id/wed"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/ripple_background"
            android:layout_below="@id/t1"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="2dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textOff="수"
            android:textOn="수"
            android:layout_toRightOf="@id/tue"
            android:textColor="#000"
            android:textSize="12dp"
            android:stateListAnimator="@null"/>

        <ToggleButton
            android:id="@+id/thu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/ripple_background"
            android:layout_below="@id/t1"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="2dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textOff="목"
            android:textOn="목"
            android:layout_toRightOf="@id/wed"
            android:textColor="#000"
            android:textSize="12dp"
            android:stateListAnimator="@null"/>

        <ToggleButton
            android:id="@+id/fri"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/ripple_background"
            android:layout_below="@id/t1"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="2dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textOff="금"
            android:textOn="금"
            android:layout_toRightOf="@id/thu"
            android:textColor="#000"
            android:textSize="12dp"
            android:stateListAnimator="@null"/>

        <ToggleButton
            android:id="@+id/sat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/ripple_background"
            android:layout_below="@id/t1"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="2dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textOff="토"
            android:textOn="토"
            android:layout_toRightOf="@id/fri"
            android:textColor="#000"
            android:textSize="12dp"
            android:stateListAnimator="@null"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r3"
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:layout_below="@id/r2"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/round">

        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="알람 이름"
            android:textColor="#000"
            android:layout_marginLeft="15dp"
            android:textSize="15dp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/alarmName"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_below="@id/t2"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14dp"
            android:textColorHint="@color/colorPrimaryDark"
            android:hint="이름을 입력해주세요" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r4"
        android:layout_width="380dp"
        android:layout_height="160dp"
        android:layout_below="@id/r3"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round">

        <TextView
            android:id="@+id/t3"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="알람 설정"
            android:textColor="#000"
            android:layout_marginLeft="15dp"
            android:textSize="15dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/sound"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/t3"
            android:text="소리"
            android:textColor="#000"
            android:layout_marginLeft="25dp"
            android:textSize="15dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/tvAlarmBellSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/type"
            android:layout_marginLeft="15dp"
            android:layout_alignBottom="@id/sound"
            android:textColor="#999898"/>

        <Switch
            android:id="@+id/soundSW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/t3"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@id/sound"
            android:layout_marginRight="30dp"
            android:track="@mipmap/switch_track_selector"
            android:thumb="@mipmap/switch_thumb_selector"/>

        <TextView
            android:id="@+id/bell"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/sound"
            android:text="진동"
            android:textColor="#000"
            android:layout_marginLeft="25dp"
            android:textSize="15dp"
            android:layout_marginTop="15dp"/>

        <Switch
            android:id="@+id/bellSW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@id/bell"
            android:layout_marginRight="30dp"
            android:track="@mipmap/switch_track_selector"
            android:thumb="@mipmap/switch_thumb_selector"/>

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/bell"
            android:text="방법"
            android:textColor="#000"
            android:layout_marginLeft="25dp"
            android:textSize="15dp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/tvGameSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/type"
            android:layout_marginLeft="15dp"
            android:layout_alignBottom="@id/type"
            android:textColor="#999898"/>

        <Switch
            android:id="@+id/typeSW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@id/type"
            android:layout_marginRight="30dp"
            android:track="@mipmap/switch_track_selector"
            android:thumb="@mipmap/switch_thumb_selector"/>

    </RelativeLayout>

    <Button
        android:id="@+id/cancelBTN"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@id/r4"
        android:text="취소"
        android:textColor="#000"
        android:background="@drawable/round"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/okBTN"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_below="@id/r4"
            android:text="저장"
            android:textColor="#000"
            android:background="@mipmap/round"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@id/cancelBTN"
            android:layout_marginBottom="20dp"/>

    </RelativeLayout>

        <ImageView
            android:id="@+id/mRules"
            android:layout_width="380dp"
            android:layout_height="380dp"
            android:layout_gravity="center"
            android:src="@drawable/mrules"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/aRules"
            android:layout_width="380dp"
            android:layout_height="380dp"
            android:layout_gravity="center"
            android:src="@drawable/arules"
            android:visibility="invisible"/>

    </FrameLayout>
</ScrollView>